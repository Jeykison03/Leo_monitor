{
    "name": "Leo Monitor - Rust Environment",
    "image": "mcr.microsoft.com/devcontainers/rust:1-1-bookworm",
    "features": {
        "ghcr.io/devcontainers/features/node-js:1": {
            "version": "20"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml",
                "serayuzgur.crates",
                "vue.volar",
                "dbaeumer.vscode-eslint"
            ]
        }
    },
    "forwardPorts": [
        8080,
        5173
    ],
    "postCreateCommand": "cd frontend && npm install",
    "remoteUser": "vscode"
}