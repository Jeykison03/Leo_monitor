{
    "name": "Heartrate Monitor",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/node-js:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/mongodb:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml",
                "serayuzgur.crates",
                "vue.volar",
                "dbaeumer.vscode-eslint"
            ]
        }
    },
    "forwardPorts": [
        8080,
        5173
    ],
    "postCreateCommand": "echo 'Setting up environment...' && cd backend && cargo fetch && cd ../frontend && npm install",
    "remoteUser": "vscode"
}